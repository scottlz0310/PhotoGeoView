{
  "monitoring": {
    "enabled": true,
    "sample_interval_seconds": 30,
    "metrics_retention_days": 30,
    "detailed_profiling": false
  },
  "metrics": {
    "memory_usage": true,
    "cpu_usage": true,
    "file_discovery_time": true,
    "thumbnail_generation_time": true,
    "ui_response_time": true,
    "cache_hit_rate": true,
    "error_rate": true
  },
  "thresholds": {
    "memory_warning_mb": 512,
    "memory_critical_mb": 1024,
    "cpu_warning_percent": 70,
    "cpu_critical_percent": 90,
    "response_time_warning_ms": 2000,
    "response_time_critical_ms": 5000
  },
  "optimization": {
    "auto_cache_cleanup": true,
    "memory_pressure_handling": true,
    "adaptive_batch_size": true,
    "background_processing": true
  },
  "reporting": {
    "console_output": false,
    "log_output": true,
    "metrics_file": "/home/hiro/Repository/PhotoGeoView/logs/performance_metrics.json",
    "summary_interval_minutes": 60
  }
}