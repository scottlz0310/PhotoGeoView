{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "photogeoview",
  "version": "3.0.0",
  "identifier": "com.photogeoview.viewer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev:vite",
    "beforeBuildCommand": "pnpm build:vite"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PhotoGeoView",
        "width": 800,
        "height": 600,
        "minWidth": 720,
        "minHeight": 540,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "fs:default",
            "store:default",
            "shell:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["jpg", "jpeg", "png", "tiff", "tif", "webp"],
        "name": "PhotoGeoView Image",
        "description": "PhotoGeoView Image",
        "role": "Viewer"
      }
    ]
  }
}
